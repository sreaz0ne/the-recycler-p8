function _init()
	plyr={x=60,y=90,speed=2}
	bullets={}
	create_stars()
end

function _update60()
	if (btn(➡️))	plyr.x+=plyr.speed
	if (btn(⬅️)) plyr.x-=plyr.speed
	if (btn(⬆️)) plyr.y-=plyr.speed
	if (btn(⬇️)) plyr.y+=plyr.speed
	if (btnp(❎)) shoot()
	
	updt_bullets()
	updt_stars()
end

function _draw()
	cls()
	--stars
	for s in all(stars) do
		pset(s.x,s.y,s.col)
	end
	--ship
	spr(0,plyr.x,plyr.y)
	--bullets
	for b in all(bullets) do 
		spr(1,b.x,b.y)
	end
end
