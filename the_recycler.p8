--stars

function create_stars()
	stars={}
	for i=1,20 do
		star={
			x=rnd(128),
			y=rnd(128),
			col=6,
			speed=1.5
		}
		add(stars,star)
	end
	for i=1,10 do
		star={
			x=rnd(128),
			y=rnd(128),
			col=7,
			speed=3.5
		}
		add(stars,star)
	end
end

function updt_stars()
	for s in all(stars) do
		if s.y > 128 then
		 s.y=-rnd(60)
		 s.x=rnd(128)
		else 
			s.y+=s.speed
		end
	end
end
