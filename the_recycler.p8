--bullets

function shoot()
	bullet={
		x=plyr.x,
		y=plyr.y,
		speed=4
	}
	add(bullets,bullet)
	sfx(0)
end

function updt_bullets()
	for b in all(bullets) do
		b.y-=b.speed
		if b.y < 7 then
			del(bullets,b)
		end
	end
end
